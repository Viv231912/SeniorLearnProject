@model IEnumerable<SeniorLearn.WebApp.Data.Member>
@{
    ViewData["Title"] = "Member";

}


<div class="container-fluid">
    <div class="mb-3 mt-3">
        <div class="card border-0" style="width:auto;">
            <div class="card-body">
                <h5 class="card-title">
                    Member List
                </h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Member ID</th>
                            <th>Surname</th>
                            <th>Given Name</th>
                            <th>Email</th>
                            <th>Date Of Birth</th>
                            <th>Renewal Date</th>
                            <th>Outstanding Fee</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td>@m.Id</td>
                                <td>@m.FirstName</td>
                                <td>@m.LastName</td>
                                <td>@m.Email</td>
                                <td>@m.DateOfBirth</td>
                                <td>@m.RenewalDate.ToShortDateString()</td>
                                <td>@m.OutstandingFees</td>
                                <td>
                                    <a asp-action="Manage" asp-route-id="@m.Id">Manage</a> |
                                    <a asp-action="Index" asp-controller="Payment" asp-route-id="@m.Id">Payments</a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="d-inline-flex">
                    <div class="me-2">
                        <a class="btn btn-primary" asp-action="Register">Register</a>
                    </div>
                    <div>
                        <a class="btn btn-primary" asp-controller="Payment" asp-action="Search">Payment</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
