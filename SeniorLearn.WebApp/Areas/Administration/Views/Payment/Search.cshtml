@model IEnumerable<SeniorLearn.WebApp.Data.Payment>


@{
    ViewData["Title"] = "Search Payments";
}


<div class="container-fluid">
    <div class="card m-3" style="width:auto;">
        <div class="card-title">
            <h4 class="m-3">Payment record for Members</h4>
        </div>
        <div class="card-body">
            <!-- Search Form -->
            <div class="mb-5">
                <form method="get" asp-action="Search">
                    <div class="form-group">
                        <label class="mb-3" for="paymentDate">Search by Payment Date:</label>
                        <input type="date" id="paymentDate" name="paymentDate" class="form-control" />
                        <input type="hidden" name="id" value="@ViewBag.MemberId" />
                        <div class="col-3 mt-3">
                            <button type="submit" class="btn btn-primary mt-2 w-100">Search</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Display Not Found Message -->
            @if (ViewData["NotFoundMessage"] != null)
            {
                <div class="alert alert-warning mb-2">
                    @ViewData["NotFoundMessage"]
                </div>
            }

            @if (Model != null && Model.Any())
            {


                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Payment Date</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Payment Method</th>
                            <th>Payment Amount</th>

                            <th>Approved</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model)
                        {
                            <tr>
                                <td>@payment.PaymentDate.ToShortDateString()</td>
                                <td>@payment.Member.FirstName</td>
                                <td>@payment.Member.LastName</td>
                                <td>@payment.Media</td>
                                <td>@payment.Amount</td>
                                <td>@(payment.Approved ? "Yes" : "No")</td>


                            </tr>
                        }
                    </tbody>
                </table>


            }
        </div>
    </div>
