@model IEnumerable<Topic>

@{
    ViewData["Title"] = "Index";

}

<div class="container-fluid">
    <div class="row justify-content-center mb-3">
        <div class="d-flex justify-content-between align-items-center w-100">
            <h5 class="fs-4">Topics</h5>
            <a class="btn btn-primary" asp-action="Create">Add Topic</a>
        </div>
    </div>

    <div class="accordion" id="topics">
       

        @foreach (var item in Model)
        {

            <div class="accordion-item">
                <h2 class="accordion-header" id="heading_@item.Id">
                    <button class="accordion-button " type="button"
                            data-bs-toggle="collapse" data-bs-target="#collapse_@item.Id" aria-expanded="true"
                            aria-controls="collapse_@item.Id">
                         @Html.DisplayFor(itemModel => item.Name)
                       
                    </button>
                </h2>
                <div id="collapse_@item.Id" class="accordion-collapse collapse " data-bs-parent="#topics">
                    <div class="accordion-body">
                        <p>
                            @Html.DisplayFor(itemModel => item.Description)
                        </p>

                        <div class="d-grid gap-2 d-md-flex justify-content-end">
                            <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-outline-danger" asp-action="DeleteTopic" asp-route-id="@item.Id" >Delete</a>
                        </div>

                    </div>

                </div>
            </div>

        }
    </div>

</div>